<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<!-- props file location -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreResourceNotFound">
			<value>true</value>
		</property>
		<property name="ignoreUnresolvablePlaceholders">
			<value>true</value>
		</property>
		<property name="locations">
			<list>
				<!-- <value>file:/c:/configsam/shambhu.properties</value> -->
				<value>classpath:shambhu.properties</value>
			</list>
		</property>
	</bean>

	<!-- Logger configuration -->
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>classpath:shambhu-logging.xml</value>
			</list>
		</property>
	</bean>


	<bean id="ao" class="com.spring.nineteen.A" p:a="${sam.id1}"
		p:msg="${sam.id2}" />
	<bean id="bo" class="com.spring.nineteen.B">
		<constructor-arg value="${sam.id3}" />
		<constructor-arg value="${sam.id4}" />
	</bean>
	<bean id="hello" class="com.spring.nineteen.Hello" />
</beans>